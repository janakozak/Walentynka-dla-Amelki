    <script>
        function wybierzOdpowiedz(odpowiedz) {
            if (odpowiedz === 'Tak') {
                alert('Bardzo Cię kocham Amelia! <3');
            } else {
                alert('Błędna odpowiedź, spróbuj jeszcze raz.');
            }
        }
